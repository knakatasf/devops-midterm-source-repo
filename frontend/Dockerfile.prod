FROM node:latest AS build

WORKDIR /app

COPY package*.json ./

RUN npm install && npm install -g vite

COPY . .

RUN npm run build

FROM nginx:latest

COPY --from=build /app/dist /usr/share/nginx/html
RUN cp -r /app/dist /frontend_dist

RUN chmod -R 755 /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

